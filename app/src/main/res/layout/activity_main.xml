<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.komamitsu.android_ocrsample.MainActivity"
    android:orientation="vertical">

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detected_text"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout"
        android:layout_margin="25dp"
        android:layout_centerHorizontal="true"
        android:background="#EEEEEE"
        android:scrollbars="vertical"
        android:visibility="gone"
        android:layout_weight="1"/>
    <TextView
        android:text="Click on camera \nChoose from gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/emptyText"
        android:layout_margin="25dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="40sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_from_gallery"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/speachButton"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_baseline_record_voice_over_24"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/take_a_photo"
            tools:context=".MainActivity"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_camera_24" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_photo_library_24"
        android:id="@+id/choose_from_gallery"
        tools:context=".MainActivity"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        />


    </RelativeLayout>


</LinearLayout>
